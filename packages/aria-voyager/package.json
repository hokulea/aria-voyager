{
  "name": "aria-voyager",
  "version": "0.2.0",
  "description": "A framework agnostic / universal package that implements navigation patterns for various aria roles and features",
  "author": "gossi",
  "license": "MIT",
  "repository": "https://github.com/hokulea/aria-voyager",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "imports": {
    "#src": "./src/index",
    "#src/*": "./src/*",
    "#tests/": "./tests/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "tsdown --watch",
    "build": "tsdown",
    "lint": "pnpm run '/^lint:(?!.*(fix)).*$/'",
    "lint:fix": "pnpm run '/^lint:[^:]*:fix/'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@gossi/config-eslint": "catalog:lint",
    "@gossi/config-prettier": "catalog:lint",
    "@hokulea/core": "catalog:lib",
    "@hokulea/theme-moana": "catalog:lib",
    "@testing-library/dom": "catalog:test",
    "@types/css-modules": "1.0.5",
    "@types/eslint": "9.6.1",
    "@vitest/browser-playwright": "catalog:test",
    "@vitest/coverage-istanbul": "catalog:test",
    "@vitest/ui": "catalog:test",
    "es-toolkit": "catalog:lib",
    "eslint": "catalog:lint",
    "playwright": "catalog:test",
    "prettier": "catalog:lint",
    "tsdown": "catalog:build",
    "typescript": "catalog:build",
    "vite": "catalog:build",
    "vitest": "catalog:test"
  },
  "engines": {
    "node": "^20.11.0 || >=22.16.0"
  }
}
